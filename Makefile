ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  Hyperion_Core_config = debug
  GLFW_config = debug
  ImGui_config = debug
  Glad_config = debug
  Tracy_config = debug
  Hyperion_Editor_config = debug
  Hyperion_Sandbox_config = debug

else ifeq ($(config),release)
  Hyperion_Core_config = release
  GLFW_config = release
  ImGui_config = release
  Glad_config = release
  Tracy_config = release
  Hyperion_Editor_config = release
  Hyperion_Sandbox_config = release

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := Hyperion-Core GLFW ImGui Glad Tracy Hyperion-Editor Hyperion-Sandbox

.PHONY: all clean help $(PROJECTS) Core Dependecies

all: $(PROJECTS)

Core: Hyperion-Core

Dependecies: GLFW Glad ImGui Tracy

Hyperion-Core: GLFW Glad ImGui Tracy
ifneq (,$(Hyperion_Core_config))
	@echo "==== Building Hyperion-Core ($(Hyperion_Core_config)) ===="
	@${MAKE} --no-print-directory -C Engine/Hyperion-Core -f Makefile config=$(Hyperion_Core_config)
endif

