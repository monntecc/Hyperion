clean:
	@${MAKE} --no-print-directory -C Engine/Hyperion-Core -f Makefile clean
	@${MAKE} --no-print-directory -C Engine/Hyperion-Core/External/GLFW -f Makefile clean
	@${MAKE} --no-print-directory -C Engine/Hyperion-Core/External/ImGui -f Makefile clean
	@${MAKE} --no-print-directory -C Engine/Hyperion-Core/External/Glad -f Makefile clean
